<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.C1Activity">
    <include layout="@layout/nav_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
    <com.o0live0o.app.appearance.views.LabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c1_lv_plateno"
        app:head_text="号牌号码:"
        ></com.o0live0o.app.appearance.views.LabelView>

    <com.o0live0o.app.appearance.views.LabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c1_lv_testid"
        app:head_text="流水号:"
        ></com.o0live0o.app.appearance.views.LabelView>

    <com.o0live0o.app.appearance.views.LabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c1_lv_operator"
        app:head_text="操作员:"
        ></com.o0live0o.app.appearance.views.LabelView>
    </LinearLayout>
        <TextView
            android:id="@+id/c1_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/marginSize"
            android:text="0"/>
    </LinearLayout>

    <include
        layout="@layout/head_board"

        ></include>

    <Button
        style="@style/loginBtn"
        android:text="提 交"
        android:layout_marginTop="10dp"
        android:background="@color/skyblue"
        android:onClick="onSubmit"/>

  <HorizontalScrollView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:onClick="onPre"
            android:text="前进"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:onClick="onPre"
            android:text="后退"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:onClick="onPre"
            android:text="停车"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:onClick="onPre"
            android:text="熄火"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:onClick="onPre"
            android:text="左打方向盘"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:onClick="onPre"
            android:text="回正"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:onClick="onPre"
            android:text="右打方向盘"/>
    </LinearLayout>
  </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginRight="@dimen/marginSize">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/c1_rv_checklist"></android.support.v7.widget.RecyclerView>
    </ScrollView>




</LinearLayout>