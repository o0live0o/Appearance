<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.DCActivity">

    <include layout="@layout/nav_bar"></include>


    <com.o0live0o.app.appearance.views.LabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dc_lv_plateno"
        app:head_text="号牌号码:"
        ></com.o0live0o.app.appearance.views.LabelView>

    <com.o0live0o.app.appearance.views.LabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dc_lv_testid"
        app:head_text="流水号:"
        ></com.o0live0o.app.appearance.views.LabelView>

    <com.o0live0o.app.appearance.views.LabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dc_lv_operator"
        app:head_text="操作员:"
        ></com.o0live0o.app.appearance.views.LabelView>


    <Button
        style="@style/loginBtn"
        android:text="提 交"
        android:background="@color/skyblue"
        android:onClick="onSubmit"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginRight="@dimen/marginSize">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dc_rv_item"></android.support.v7.widget.RecyclerView>
    </ScrollView>


</LinearLayout>