<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.o0live0o.app.appearance">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/apple"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activitys.DispatchActivity"></activity>
        <activity android:name=".activitys.LogActivity" />
        <activity android:name=".activitys.WebserviceActivity" />
        <activity android:name=".activitys.HelpActivity" />
        <activity android:name=".activitys.C1Activity" />
        <activity android:name=".activitys.NavActivity" />
        <activity android:name=".activitys.SettingActivity" />
        <activity android:name=".activitys.DCActivity" />
        <activity android:name=".activitys.F1Activity" />
        <activity android:name=".activitys.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.LoginActivity" />
        <activity android:name=".activitys.MainActivity" />
    </application>

</manifest>